<p id="notice"><%= notice %></p>


<div class="container">
  <div class="jumbotron">
    <h1 align=center>Listing Quotes</h1>
    <p align= center>A collection of Quotes</p> 
  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Author</th>
      <th>Quote</th>
      <th>Background</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author %></td>
        <td><%= quote.quote %></td>
        <td><%= quote.background %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', quote %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_quote_path(quote) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Quote', new_quote_path %></button>


